<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J"/>        
    </settings>

    <typeAliases>
      <typeAlias type='eci.pdsw.entities.Equipo' alias='Equipo'/>
      <typeAlias type='eci.pdsw.entities.EquipoBasico' alias='EquipoBasico'/>
      <typeAlias type='eci.pdsw.entities.Prestamo' alias='Prestamo'/>
      <typeAlias type='eci.pdsw.entities.PrestamoBasico' alias='PrestamoBasico'/>
      <typeAlias type='eci.pdsw.entities.Rol' alias='Rol'/>
      <typeAlias type='eci.pdsw.entities.Rol_Usuario' alias='Rol_Usuario'/>
      <typeAlias type='eci.pdsw.entities.Usuario' alias='Usuario'/>
    </typeAliases>
    
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://desarrollo.is.escuelaing.edu.co:3306/bdprueba" />
                <property name="username" value="bdprueba" />
                <property name="password" value="bdprueba" />
            </dataSource>
        </environment>
    </environments>

                        
    <mappers>
        <mapper resource="mappers/EquiposMapper.xml"></mapper>
    </mappers> 

        
                        
</configuration>
